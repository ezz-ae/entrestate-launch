# Example environment variables for entrestate-launch

# Minimal deploy variables
NEXT_PUBLIC_APP_URL= # Canonical app URL used for callbacks/redirects (e.g. https://app.entrestate.com)

NEXT_PUBLIC_FIREBASE_API_KEY= # Firebase Web API key used by client bundles
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN= # Firebase Auth domain (e.g. example.firebaseapp.com)
NEXT_PUBLIC_FIREBASE_PROJECT_ID= # Firebase project identifier
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET= # Storage bucket for uploads
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID= # Messaging sender ID for Firebase services
NEXT_PUBLIC_FIREBASE_APP_ID= # Firebase App ID (web)

FIREBASE_ADMIN_CREDENTIALS= # JSON string from a service account (preferred; escape newlines with \n)
FIREBASE_ADMIN_PROJECT_ID= # Only needed when FIREBASE_ADMIN_CREDENTIALS is not set
FIREBASE_ADMIN_CLIENT_EMAIL= # Only needed when FIREBASE_ADMIN_CREDENTIALS is not set
FIREBASE_ADMIN_PRIVATE_KEY= # Only needed when FIREBASE_ADMIN_CREDENTIALS is not set (escape line breaks with \n)

# Feature flags (explicitly set these for every environment)
ENABLE_FIREBASE_AUTH=true # Toggle Firebase ID token enforcement (production should set true; adjust per environment)
ENABLE_PAYMENTS=false # Enable billing (PayPal/Ziina)
ENABLE_GOOGLE_ADS=false # Enable Google Ads OAuth sync
ENABLE_SMS=false # Enable Twilio SMS
ENABLE_EMAIL=false # Enable Resend email
RATE_LIMIT_DISABLED=false # Skip Upstash rate limits (set true when Upstash is not configured)
ENABLE_SUPABASE=false # Enable legacy Supabase data flows
ENABLE_CRON=false # Set true if cron endpoints or schedulers are configured

# Optional / gated configuration

## Rate limiting
UPSTASH_REDIS_REST_URL= # Upstash REST endpoint (required when RATE_LIMIT_DISABLED=false)
UPSTASH_REDIS_REST_TOKEN= # Upstash REST token (required when RATE_LIMIT_DISABLED=false)
CRON_SECRET= # Required when ENABLE_CRON=true

## AI
GEMINI_API_KEY= # Gemini/Google AI key powering AI flows (email/SMS/chat); set when those endpoints are enabled

## Email (Resend — only when ENABLE_EMAIL=true)
RESEND_API_KEY=
FROM_EMAIL= # Default “from” address
NOTIFY_EMAIL_TO= # Optional fallback notification recipient

## SMS (Twilio — only when ENABLE_SMS=true)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

## Ads and marketing (only when ENABLE_GOOGLE_ADS=true)
GOOGLE_ADS_CLIENT_ID= # Server-side Google Ads OAuth client
GOOGLE_ADS_CLIENT_SECRET= # Google Ads client secret
NEXT_PUBLIC_GOOGLE_ADS_CLIENT_ID= # Client-side link ID
GOOGLE_ADS_REDIRECT_URI= # Optional override for the redirect URI (defaults to NEXT_PUBLIC_APP_URL/api/ads/google/connect)
NEXT_PUBLIC_GOOGLE_ADS_REDIRECT_URI= # Optional client-side override
ADS_NOTIFICATION_EMAIL= # Optional alert email for the Ads sync
META_ACCESS_TOKEN= # Legacy toggle/control for Meta integrations (optional)

## Payments (only when ENABLE_PAYMENTS=true)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
NEXT_PUBLIC_PAYPAL_CLIENT_ID= # Optional public PayPal button ID
PAYPAL_WEBHOOK_ID= # Only if you register PayPal webhooks
PAYPAL_API_BASE=https://api-m.paypal.com # Override for sandbox (https://api-m.sandbox.paypal.com)
ZIINA_API_KEY=
ZIINA_WEBHOOK_SECRET=
ZIINA_BASE_URL=https://api.sandbox.ziina.com # Optional override

## Domains & routing
NEXT_PUBLIC_ROOT_DOMAIN= # Optional root domain (defaults to entrestate.com)
NEXT_PUBLIC_SITE_DOMAIN= # Optional published site suffix (defaults to site.<root>)

## Legacy (Supabase, only when ENABLE_SUPABASE=true)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=
# Legacy fallback key (optional when publishable key is set)
NEXT_PUBLIC_SUPABASE_ANON_KEY=

## CRM & integrations
HUBSPOT_ACCESS_TOKEN= # Optional HubSpot API token

## Observability
SENTRY_DSN= # Server-side Sentry DSN
NEXT_PUBLIC_SENTRY_DSN= # Client-side Sentry DSN

## Legacy/ops-only (do not set in runtime Vercel env unless you run CLI automation locally)
VERCEL_API_TOKEN=
VERCEL_PROJECT_ID=
VERCEL_TEAM_ID=
